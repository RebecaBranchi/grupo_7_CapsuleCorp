<%- include ("../partials/head")%>

    <body>

        <%- include ("../partials/loader")%>
            <%- include ("../partials/header")%>

                <main>
                    <div class="sep"></div>
                    <%- include ("../partials/banner")%>
                        <div class="maincaja">
                            <div class="contenedor">
                                <div class="titulodeseccion">
                                    <h2>Basado en tu ultima visita</h2>
                                </div>
                            </div>
                            <div class="carrusel">
                                <% products.forEach(product=> { %>
                                    <% if (product.discount == 0 ) { %>

                                        <div class="contenedor-foto-texto">
                                            <a href="/products/detail/<%= product.id %> ">
                                                <div class="fotosss">
                                                    <img src="/img/product/<%= product.image %> " alt="" class="imagenes">
                                                </div>
                                                <div class="contenedor-texto-icono">
                                                    <div class="camionicon">
                                                        <i class="fas fa-truck" id="camionicono"></i>
                                                    </div>
                                                    <div class="contenedor-texto">
                                                        <div class="preciodescuento">
                                                            <h3 class="precio">$
                                                                <%= product.price %>
                                                            </h3>
                                                            <h3 class="descuento">
                                                                <%= product.discount %> OFF
                                                            </h3>
                                                        </div>
                                                    </div>
                                                </div>
                                                <h3 class="descripcion">
                                                    <%= product.name %>
                                                </h3>
                                        </div>
                                        <% } %>
                                            <% }) %>
                            </div>
                            <div class="contenedor">
                                <div class="titulodeseccion">
                                    <h2>Ofertas</h2>
                                </div>
                                <div class="carrusel">
                                    <% products.forEach(product=> { %>
                                        <% if (product.discount >= 5 ) { %>
                                            <div class="contenedor-foto-texto">
                                                <a href="/products/detail/<%= product.id %> ">
                                                    <div class="fotosss">
                                                        <img src="/img/product/<%= product.image %> " alt="" class="imagenes">
                                                    </div>
                                                    <div class="contenedor-texto-icono">
                                                        <div class="camionicon">
                                                            <i class="fas fa-truck" id="camionicono"></i>
                                                        </div>
                                                        <div class="contenedor-texto">
                                                            <div class="preciodescuento">
                                                                <h3 class="precio">$
                                                                    <%= product.price %>
                                                                </h3>
                                                                <h3 class="descuento">
                                                                    <%= product.discount %> OFF
                                                                </h3>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <h3 class="descripcion">
                                                        <%= product.description %>
                                                    </h3>
                                            </div>
                                            <% } %>
                                                <% }) %>
                                </div>
                            </div>

                        </div>
                </main>
                <%- include ("../partials/brands", {brands})%>
                    <%- include ("../partials/categories", {categories})%>

                        <%- include ("../partials/redessociales")%>
                            <%- include ("../partials/footer")%>
                                <script src="/js/carrusel.js"></script>
                                <script src="/js/loader.js"></script>

    </body>

    </html>