<!DOCTYPE html>
<html lang="en">

<%- include ("../partials/head")%>

    <body>
        <div class="loader"></div>
        <div class="promociones">
            <h2>PROMOCIONES</h2>
        </div>

        <img src="/img/mario.gif" alt="" class="mario">

        <%- include ("../partials/header")%>

            <div class="bannerCarrusel">
                <div class="big">
                    <img src="/img/banners/1.png" alt="img1" class="img">
                    <img src="/img/banners/2.png" alt="img2" class="img">
                    <img src="/img/banners/3.png" alt="img3" class="img">
                   
                </div>
                <ul class="points">
                    <li class="point activo"></li>
                    <li class="point activo"></li>
                    <li class="point activo"></li>
                </ul>
                
            </div>
            <main class="maincaja">
                <div class="contenedor">
                    <div class="titulodeseccion">
                        <h2>Basado en tu ultima visita</h2>
                    </div>
                </div>
                    <div class="carrusel">
                        <% products.forEach(product=> { %>
                            <% if (product.type=="mas-vendido" ) { %>

                                <div class="contenedor-foto-texto">
                                    <a href="/products/detail/<%= product.id %> ">
                                        <div class="fotosss">
                                            <img src="/img/<%= product.image %> " alt="" class="imagenes">
                                        </div>
                                        <div class="contenedor-texto-icono">
                                            <div class="camionicon">
                                                <i class="fas fa-truck" id="camionicono"></i>
                                            </div>
                                            <div class="contenedor-texto">
                                                <div class="preciodescuento">
                                                    <h3 class="precio">$ <%= product.price %>
                                                    </h3>
                                                    <h3 class="descuento">
                                                        <%= product.discount %> OFF
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <h3 class="descripcion">
                                            <%= product.name %>
                                        </h3>
                                </div>
                                <% } %>
                                    <% }) %>
                    </div>
                    <div class="contenedor">
                        <div class="titulodeseccion">
                            <h2>Ofertas</h2>
                        </div>
                        <div class="carrusel">
                            <% products.forEach(product=> { %>
                                <% if (product.type=="ofertas" ) { %>

                                    <div class="contenedor-foto-texto">
                                        <a href="/products/detail/<%= product.id %> ">
                                            <div class="fotosss">
                                                <img src="/img/<%= product.image %> " alt="" class="imagenes">
                                            </div>
                                            <div class="contenedor-texto-icono">
                                                <div class="camionicon">
                                                    <i class="fas fa-truck" id="camionicono"></i>
                                                </div>
                                                <div class="contenedor-texto">
                                                    <div class="preciodescuento">
                                                        <h3 class="precio">$ <%= product.price %>
                                                        </h3>
                                                        <h3 class="descuento">
                                                            <%= product.discount %> OFF
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                            <h3 class="descripcion">
                                                <%= product.name %>
                                            </h3>
                                    </div>
                                    <% } %>
                                        <% }) %>
                        </div>
                    </div>
                        <div class="categoriaspopulares">
                            <h3> Categorias </h3>
                            <div class="categoria">
                                <div class="subcategoria">
                                    <img src="/img/category/Computaduras.png" alt="" class="category">
                                    <div class="categoriatexto">Computadoras</div>
                                </div>
                                <div class="subcategoria">
                                    <img src="/img/category/_notebook.png" alt="" class="category">
                                    <div class="categoriatexto">Notebook</div>
                                </div>
                                <div class="subcategoria">
                                    <img src="/img/category/arma tu pc.png" alt="" class="category">
                                    <div class="categoriatexto">Arma tu Pc</div>
                                </div>
                                <div class="subcategoria">
                                    <img src="/img/category/gamer.png" alt="" class="category">
                                    <div class="categoriatexto">Gamer</div>
                                </div>
                                <div class="subcategoria">
                                    <img src="/img/category/Copia de arma tu pc.jpg" alt="" class="category">
                                    <div class="categoriatexto">Impresoras e Insumos</div>
                                </div>
                                <div class="subcategoria">
                                    <img src="/img/category/gadget.png" alt="" class="category">
                                    <div class="categoriatexto">Gadget</div>
                                </div>
                            </div>
                        </div>
                        
            </main>

            <%- include ("../partials/redessociales")%>
                <%- include ("../partials/footer")%>
                <script src="/js/carrusel.js"></script>
    </body>

</html>