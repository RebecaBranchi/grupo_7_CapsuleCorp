<!DOCTYPE html>
<html lang="en">

<%- include ("../partials/head")%>

<body>
       
    <%- include ("../partials/header")%>
    
    <main class="maincaja">
        <div class="contenedor">
            <div class="titulodeseccion">
                <h2>Todas las marcas</h2><br>
                <button><a href="/brand/create">Agrega marcas</a></button>
           <br>
           <br>
            </div>
            <div class="carrusel">
                <% brands.forEach( brand => { %> 
                <div class="contenedor-foto-texto">
                   
                    <h2 ><%= brand.name %> </h2>

                   <button><a href="brand/edit/<%= brand.id %>">Editar marca</a></button> 
                  
                   <form action="/brand/delete/<%= brand.id %>?_method=DELETE" method="POST">
                    <button type="submit">Eliminar marca</button>
                
                </form>                   
                
                   
                   
                   
                </div>
                <% }) %>
            </div>

    </main>

    <%- include ("../partials/categories")%>
    <%- include ("../partials/redessociales")%>
    <%- include ("../partials/footer")%>
  
</body>

</html>