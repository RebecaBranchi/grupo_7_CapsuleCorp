<!DOCTYPE html>
<html lang="en">

<%- include ("../partials/head")%>

<body>
       
    <%- include ("../partials/header")%>
    
    <main class="maincaja">
        <div class="contenedor">
            <div class="titulodeseccion">
                <h2>Todos los colores</h2> <br>

                <button><a href="/color/create">Agrega mas colores</a></button>
            <br>
            <br>
            </div>
            <div class="carrusel">
                <% colors.forEach( color => { %> 
                <div class="contenedor-foto-texto">
                   
                    <h2 ><%= color.name %> </h2>

                   <button><a href="color/edit/<%= color.id %>">Editar color</a></button> 
                  
                   <form action="/color/delete/<%= color.id %>?_method=DELETE" method="POST">
                    <button type="submit">Eliminar color</button>
                
                </form>                   
                
                   
                   
                   
                </div>
                <% }) %>
            </div>

    </main>

    <%- include ("../partials/categories")%>
    <%- include ("../partials/redessociales")%>
    <%- include ("../partials/footer")%>
  
</body>

</html>